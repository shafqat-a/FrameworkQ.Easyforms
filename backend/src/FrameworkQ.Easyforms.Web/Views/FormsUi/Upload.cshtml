@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Upload Form";
}

<div class="card">
    <h2>Upload HTML Form</h2>
    <form method="post" enctype="multipart/form-data">
        <div style="margin:10px 0;">
            <input type="file" name="htmlFile" accept=".html,.htm" />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="invalid-feedback" style="display:block; margin-top:10px;">@string.Join("; ", ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage))</div>
    }
</div>

